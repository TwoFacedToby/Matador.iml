<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="main" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.matador.gui.MenuScreen">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <VBox alignment="CENTER" prefHeight="360.0" prefWidth="540.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="106.0" prefWidth="445.0" text="Matador">
               <font>
                  <Font name="Arial Black" size="46.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="143.0" prefWidth="540.0">
               <children>
                  <VBox prefHeight="107.0" prefWidth="147.0">
                     <children>
                        <Label text="Creators">
                           <font>
                              <Font name="Arial Bold" size="13.0" />
                           </font>
                        </Label>
                        <Label text="Andreas">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                        <Label text="Kenneth">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                        <Label text="Nicklas">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                        <Label text="Mikkel">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                        <Label text="Tobias">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <TextField fx:id="playerNameInput" alignment="CENTER" onAction="#onAddPlayerPressed" prefHeight="26.0" prefWidth="120.0" promptText="Write Player Name Here">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </TextField>
                        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Button fx:id="addPlayer" mnemonicParsing="false" onAction="#onAddPlayerPressed" text="Add Player" />
                              <Button fx:id="removePlayers" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onRemovePlayersPressed" text="Remove Players" />
                           </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#onStartGamePressed" text="   Start Game   " />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="TOP_RIGHT" prefHeight="107.0" prefWidth="147.0">
                     <children>
                        <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Players" textAlignment="CENTER">
                           <font>
                              <Font name="Arial Bold" size="13.0" />
                           </font>
                        </Label>
                        <Label fx:id="p1" alignment="CENTER_RIGHT" contentDisplay="RIGHT" textAlignment="CENTER">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="p2" alignment="CENTER_RIGHT" contentDisplay="RIGHT" textAlignment="CENTER">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="p3" alignment="CENTER_RIGHT" contentDisplay="RIGHT" textAlignment="CENTER">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="p4" alignment="CENTER_RIGHT" contentDisplay="RIGHT" textAlignment="CENTER">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </VBox>
               </children>
            </HBox>
            <Label fx:id="messageBox" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="540.0" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</VBox>
